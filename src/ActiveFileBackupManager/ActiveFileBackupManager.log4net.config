<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <threshold value="ALL" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-5p] [%logger] %m%newline" />
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <threshold value="OFF" />
      <file value="ActiveFileBackupService" />
      <immediateFlush value="true" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <staticLogFileName value="false" />
      <datePattern value=".yyyy-MM-dd.'log'" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1GB" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="--------------------------------------------------------------------------------------------------------------&#xD;&#xA;Active File Backup&#xD;&#xA;(c) 2007 Christof Senn, All rights reserved.&#xD;&#xA;&#xD;&#xA;[START OF LOG]&#xD;&#xA;" />
        <footer value="[END OF LOG]&#xD;&#xA;" />
        <conversionPattern value="%d [%-5p] [%logger] %m%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
    </root>
    <!--<logger name="LogerName" additivity="false">
    <level value="WARN" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="FileAppender" />
  </logger>-->
  </log4net>
</configuration>